{
  "compilerOptions": {
    "module": "NodeNext",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "strict": true,
    "noImplicitOverride": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "./src/types/type/global"]

  },
  "include": ["src/**/*", "index.js"],
  "exclude": ["node_modules"]
}