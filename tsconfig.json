{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2022", // or "esnext", "node16", etc.
    "target": "es2017",  // or higher like "es2020"
    "strict": true,       // optional, but recommended
    "esModuleInterop": true, // optional, for compatibility with CommonJS modules
    "moduleResolution": "node" // optional, for resolving modules like Node.js
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}